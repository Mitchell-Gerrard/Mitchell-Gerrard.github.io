source "https://rubygems.org"

# Default theme
gem "minima", "~> 2.5"

# GitHub Pages
gem "github-pages", "~> 232", group: :jekyll_plugins

# Plugins
group :jekyll_plugins do
  gem "jekyll-feed", "~> 0.12"
end

# Windows and JRuby support
platform :windows do
  gem "tzinfo", ">= 1", "< 3"
  gem "tzinfo-data"
  gem "wdm", "~> 0.1"
end

platform :jruby do
  gem "http_parser.rb", "~> 0.6.0"
end

# WEBrick (required for Ruby 3+)
gem "webrick", "~> 1.9"
